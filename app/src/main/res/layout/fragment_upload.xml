<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="org.coreocto.dev.hf.androidclient.fragment.AddFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
                android:id="@+id/lvUploadFileList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/bAddFile"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:text="Add File"/>
        <Button
                android:id="@+id/bLoadFiles"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:text="Load from Default Folder"/>
        <Button
                android:id="@+id/bProcessQueue"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:text="Process Queue"/>
    </LinearLayout>

</FrameLayout>
